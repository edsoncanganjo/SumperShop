@model SumperShop.Data.Entities.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <div class="row">

        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ImageUrl)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.LastPurchase)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.LastPurchase)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.LastSale)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.LastSale)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IsAvailable)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IsAvailable)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Stock)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Stock)
                </dd>

            </dl>
        </div>

        <div class="col-md-4">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" alt="Imagem" style="width:300px;height:450px; max-width:100%; height:auto;" />
            }
        </div>
    </div>

</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-danger" asp-action="Index">Back to List</a>
</div>
